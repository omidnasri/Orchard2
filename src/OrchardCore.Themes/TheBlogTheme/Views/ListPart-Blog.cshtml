@{
    IEnumerable<dynamic> contentItems = Model.ContentItems;
}

@if (contentItems.Any())
{
    @foreach (var contentItemSummary in contentItems)
    {
        @await DisplayAsync(contentItemSummary)
    }
}

@{ 
    Model.Pager.PreviousText = T["← Newer Posts"];
    Model.Pager.NextText = T["Older Posts →"];
    Model.Pager.PreviousClass = "previous";
    Model.Pager.NextClass = "next";
}
@await DisplayAsync(Model.Pager)